{% if label_hidden %}
  {% if multiple %}
    {% for item in items %}
      <div class="margin-bottom-05">
        {{ item.content }}
      </div>
    {% endfor %}
  {% else %}
    {% for item in items %}
      <div class="margin-bottom-05">
        {{ item.content }}
      </div>
    {% endfor %}
  {% endif %}
{% else %}
  <p class="margin-bottom-0">
    <b>
      {{ label }}
    </b>
  </p>
  {% for item in items %}
    <div>
      {{ item.content }}
    </div>
  {% endfor %}
{% endif %}
